{
  "compileOnSave": false,

  "compilerOptions": {
    "baseUrl": "src",

    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@app/core/*": [
        "app/service/*"
      ],
      "@app/home1/*": [
        "app/home1/*"
      ]
    },

    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  }



